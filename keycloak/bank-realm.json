      {
        "name": "TRANSFER_WRITE",
        "description": "Permission to perform transfers",
        "composite": false,
        "clientRole": false
      },
      {
        "name": "CASH_WRITE",
        "description": "Permission to perform cash",
        "composite": false,
        "clientRole": false
      },
      {
        "name": "SERVICE",
        "description": "Generic service role for microservices",
        "composite": false,
        "clientRole": false
      },
      {
        "name": "NOTIFICATIONS",
        "description": "Permission to send notifications",
        "composite": false,
        "clientRole": false
      },
      {
        "name": "ACCOUNTS_WRITE",
        "description": "Permission to write to accounts",
        "composite": false,
        "clientRole": false
      }
    ]
  },

